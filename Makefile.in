
SHELL = @bash@

PACKAGE_NAME = @PACKAGE_NAME@
PACKAGE_VERSION = @PACKAGE_VERSION@
dist_name = $(PACKAGE_NAME)-$(PACKAGE_VERSION)

prefix = @prefix@

bash = @bash@
chmod = @chmod@
m4 = @m4@
saxon = @saxon@

INSTALL = @INSTALL@
MKDIR_P = @MKDIR_P@
SED = @SED@

all_dir = tmp/all
share_dir_name = $(PACKAGE_NAME)
share_dir_rel = share/$(share_dir_name)
share_dir = $(all_dir)/$(share_dir_rel)
all_files = \
	$(all_dir)/.stow-local-ignore \
	$(all_dir)/bin/check-doc \
	$(all_dir)/bin/doc-to-schematron \
	$(all_dir)/bin/process-doc \
	$(share_dir)/xml-catalog.xml \
	$(share_dir)/common.xsl \
	$(share_dir)/doc-to-dependencies.xsl \
	$(share_dir)/doc-to-schematron.xsl \
	$(share_dir)/doc-to-text.xsl \
	$(share_dir)/doc-to-xhtml.xsl \
	$(share_dir)/doc.css \
	$(share_dir)/doc.sch \
	$(share_dir)/doc.xsd \
	$(share_dir)/extract-xml-blurbs.xsl \
	$(share_dir)/xhtml-to-html4.01.xsl \
	$(share_dir)/xsl-functions.xsl \

install_files = $(all_files:$(all_dir)/%=$(prefix)/%)

run_m4 = $(m4) -P \
	-D MACRO_BASH_COMMAND=$(bash) \
	-D MACRO_OPT_HELP_BASH=@opt_help_bash@ \
	-D MACRO_OPT_VERBOSE_BASH=@opt_verbose_bash@ \
	-D MACRO_FAIL_BASH=@fail_bash@ \
	-D MACRO_PARANOIA_BASH=@paranoia_bash@ \
	-D MACRO_TEMP_BASH=@temp_bash@ \
	-D MACRO_SHARE_DIR_REL=$(share_dir_rel) \

.PHONY: default
default: all

.PHONY: help # Print this help
help:
	@ echo Available targets:
	@ $(SED) -e 's/^.PHONY: *\([^ #]*\) *\# *\(.*\)$$/  \1: \2/p;d' Makefile

#############################################################################
# all

.PHONY: all # Build all the usual suspects (the default target)
all: $(all_files)

$(all_dir)/bin/%: src/bin/%.m4 macros.m4 Makefile
	$(MKDIR_P) $(dir $@)
	$(run_m4) macros.m4 $< > $@
	$(chmod) 755 $@

$(all_dir)/%: src/%
	$(MKDIR_P) $(dir $@)
	$(INSTALL) $< $@

$(share_dir)/%: src-share/%.xslext
	$(MKDIR_P) $(dir $@)
	$(saxon) --in=$< --out=$@ --xsl=xsl-extension.xsl

$(share_dir)/%: src-share/%.m4 macros.m4 Makefile
	$(MKDIR_P) $(dir $@)
	$(run_m4) macros.m4 $< > $@

$(share_dir)/%: src-share/%
	$(MKDIR_P) $(dir $@)
	$(INSTALL) $< $@

#############################################################################
# install

.PHONY: install # put files into installation directory
install: $(install_files)

$(prefix)/%: $(all_dir)/%
	$(MKDIR_P) $(dir $@)
	if [[ -x $< ]]; \
	then $(INSTALL) -m 755 $< $@; \
	else $(INSTALL) -m 644 $< $@; \
	fi

.PHONY: uninstall # Remove files from installation directory
uninstall:
	$(RM) $(install_files)

#############################################################################
# clean

.PHONY: clean # Remove make products
clean:
	$(RM) -r tmp

.PHONY: distclean # Remove configure products
distclean: clean
	$(RM) Makefile autom4te.cache config.log config.status 
